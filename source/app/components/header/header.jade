- require('./header.styl')
- var logoPng = require('../_layout/logo.png')
nav.blue
    .nav-wrapper
        img.logo(src= logoPng)
        a.brand-logo(ui-sref="root.layout.home") X
        ul.header-menus.right(ng-if="vm.isLoggedIn")
            li.header-user-name.hide-sm
                span {{vm.userInfo.name}}
            li.header-dropdown
                a.dropdown-button.waves-light.waves-effect(data-activates="header-dropdown-content", aio-dropdown-init)
                    i.mdi-navigation-more-vert    
                ul#header-dropdown-content.dropdown-content
                    li.hide-gt-sm.center-align
                        span.grey-text {{vm.userInfo.name}}
                    li.hide-gt-sm.divider
                    li.logout-link
                        a(ui-sref="root.layout.login({action: 'logout'})")
                            i.mdi-action-exit-to-app.left
                            | Logout
